\DeclareFontShape{LTH}{kinnari}{b}{n}{<->s * [1.3] kinnari_b}{}
\DeclareFontShape{LTH}{kinnari}{b}{sl}{<->s * [1.3] kinnari_bo}{}

% Substitutions
\DeclareFontShape{LTH}{kinnari}{m}{it}{<->ssub * kinnari/m/sl}{}
\DeclareFontShape{LTH}{kinnari}{b}{it}{<->ssub * kinnari/b/sl}{}

\DeclareFontShape{LTH}{kinnari}{bx}{n}{<->ssub * kinnari/b/n}{}
\DeclareFontShape{LTH}{kinnari}{bx}{sl}{<->ssub * kinnari/b/sl}{}
